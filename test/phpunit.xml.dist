<?xml version="1.0"?>

<!-- see http://www.phpunit.de/wiki/Documentation -->
<phpunit bootstrap="bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnFailure="false">

  <testsuites>
    <testsuite name="Http Test Suite">
      <file>test/Versionable/Http/Browser/BrowserTest.php</file>
      <file>test/Versionable/Http/Client/HttpTest.php</file>
      <file>test/Versionable/Http/Cookie/CookieTest.php</file>
      <file>test/Versionable/Http/History/HistoryTest.php</file>
      <file>test/Versionable/Http/History/EntryTest.php</file>
      <file>test/Versionable/Http/Request/RequestTest.php</file>
      <file>test/Versionable/Http/Response/ResponseTest.php</file>
      <file>test/Versionable/Http/Url/UrlTest.php</file>
    </testsuite>
  </testsuites>

  <logging>
    <log type="coverage-html"
         target="../build/test/report/coverage"
         charset="UTF-8"
         yui="true"
         highlights="true"/>
    <log type="testdox-html"
         target="../build/test/report/testdox.html"/>
    <log type="junit"
         target="../build/test/report/logfile.xml"
         logIncompleteSkipped="false"/>
  </logging>

</phpunit>
